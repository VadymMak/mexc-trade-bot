# ========================================
# MEXC Trading Bot - Production Config
# ========================================

# Exchange Provider
PROVIDER=MEXC
MODE=LIVE  # LIVE or DEMO

# MEXC API Credentials
MEXC_API_KEY=your_live_api_key_here
MEXC_API_SECRET=your_live_api_secret_here

# WebSocket (disable for stability in production)
ENABLE_WS=True

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Capital Management
MAX_CAPITAL_USD=1000
MAX_POSITION_SIZE_USD=200
MAX_POSITIONS=5
MAX_EXPOSURE_PER_POSITION_PCT=20

# Trading Strategy
ORDER_SIZE_USD=50
TAKE_PROFIT_BPS=2.0
STOP_LOSS_BPS=-3.0
TIMEOUT_EXIT_SEC=30
MAX_CONCURRENT_SYMBOLS=10

# Allocation Mode (equal, dynamic, smart)
ALLOCATION_MODE=smart

# ML Settings
ML_MIN_CONFIDENCE=0.5
ML_ENABLED=True

# Logging
LOG_LEVEL=INFO

# Database (will be overridden by docker-compose)
DB_PATH=/app/data/mexc.db

